<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_kyc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="#F5F5F5"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_kyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/kyc_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:alpha="0.8"
                android:scaleType="fitCenter"
                android:src="@drawable/kyc"
                app:layout_constraintLeft_toLeftOf="@id/cl_kyc"
                app:layout_constraintRight_toRightOf="@id/cl_kyc"
                app:layout_constraintTop_toTopOf="@id/cl_kyc" />

            <Button
                android:id="@+id/btn_kyc"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow"
                android:text="KYC VERIFICATION"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl_kyc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kyc_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_approve"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="#F5F5F5"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_kyc">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_approve"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/approve_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:alpha="0.8"
                android:scaleType="fitCenter"
                android:src="@drawable/approve"
                app:layout_constraintLeft_toLeftOf="@id/cl_approve"
                app:layout_constraintRight_toRightOf="@id/cl_approve"
                app:layout_constraintTop_toTopOf="@id/cl_approve" />

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow"
                android:text="Approve Loan"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl_approve"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/approve_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="#F5F5F5"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_approve">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_Update"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/update_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:alpha="0.8"
                android:scaleType="fitCenter"
                android:src="@drawable/update"
                app:layout_constraintLeft_toLeftOf="@id/cl_Update"
                app:layout_constraintRight_toRightOf="@id/cl_Update"
                app:layout_constraintTop_toTopOf="@id/cl_Update" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow"
                android:text="Update Transaction"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl_Update"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/update_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>